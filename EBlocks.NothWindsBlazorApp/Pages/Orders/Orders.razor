@page "/orders"

@inherits OrdersBase;
@using EBlocks.Interfaces

<h3>NorthWind's Orders</h3>

@if (this.Orders != null)
{
    <MatTable Items="@Orders" class="mat-elevation-z5 shorterTable">
        <MatTableHeader>
            <th>Order Id</th>
            <th>Order Date</th>
            <th>Customer Name</th>
            <th>Customer Number</th>
        </MatTableHeader>
        <MatTableRow>
            <td>@context.OrderID</td>
            <td>@context.OrderDate</td>
            <td>@context.CustomerName</td>
            <td>@context.CustomerContactNumber</td>
        </MatTableRow>
    </MatTable>

}
else
{
    <p>Loading...</p>
}



<style>
    .shorterTable {
        width: 100%;
    }

    table th {
        padding-left: 5px;
        padding-right: 5px;
    }
</style>